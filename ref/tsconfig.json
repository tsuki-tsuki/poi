{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "jsx": "react",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "views/*": [
        "./views/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./shims/vendor"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "moduleResolution": "node",
  }
}
